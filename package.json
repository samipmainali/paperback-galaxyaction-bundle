{
    "name": "general-extensions",
    "repositoryName": "General Extensions (0.9)",
    "description": "Paperback extensions for websites with unique, non-generic themes. Maintained by the Paperback Community.",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint --fix --cache --cache-location 'node_modules/.cache/eslint/.eslint-cache'",
        "lint:check": "eslint --cache --cache-location 'node_modules/.cache/eslint/.eslint-cache'",
        "format": "prettier --write '**/*{.md,.yml,.yaml,.json,.js,.ts}' --cache",
        "format:check": "prettier --check '**/*{.md,.yml,.yaml,.json,.js,.ts}' --cache",
        "bundle": "paperback-cli bundle",
        "serve": "paperback-cli serve",
        "logcat": "paperback-cli logcat",
        "dev": "paperback-cli serve -w",
        "test": "tsc --project tsconfig.json --noEmit && npm run lint:check && npm run format:check && npm run bundle",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.1",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
        "@paperback/toolchain": "^1.0.0-alpha.46",
        "@paperback/types": "^1.0.0-alpha.46",
        "@types/eslint": "^9.6.1",
        "@types/upng-js": "^2.1.5",
        "cheerio": "^1.0.0",
        "eslint": "^9.25.1",
        "fastest-levenshtein": "^1.0.16",
        "husky": "^9.1.7",
        "jpeg-js": "^0.4.4",
        "moment": "^2.30.1",
        "prettier": "^3.5.3",
        "stemmer": "^2.0.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.0",
        "upng-js": "^2.1.0"
    }
}
